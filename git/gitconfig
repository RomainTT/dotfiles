[core]
	editor = vim
	excludesfile = ~/.gitignore

[push]
	default = simple

[diff]
	tool = vimdiff

[merge]
	tool = vim +Conflicted

[mergetool "nfugitive"]
	cmd = vim -f -c "Gdiff" "$MERGED"
[mergetool "vim-conflicted"]
	cmd = vim +Conflicted
